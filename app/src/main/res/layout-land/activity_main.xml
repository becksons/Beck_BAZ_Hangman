<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="46dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/vertical_button_view"
                android:name="com.example.beck_baz_hangman.ButtonLogicLand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout="@layout/vertical_buttons" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_hint"
                android:name="com.example.beck_baz_hangman.PanelTwoFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout="@layout/fragment_panel_two" />


        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_graphics"
            android:name="com.example.beck_baz_hangman.HangmanFragment"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            tools:layout="@layout/hangman_visual" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
