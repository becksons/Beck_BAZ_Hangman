<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hangmanImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:contentDescription="@string/todo"

        android:paddingTop="50dp"
        android:paddingStart="100dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/hangman_0" />



<!--    <Button-->
<!--        android:id="@+id/btnIncorrectGuess"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="80dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:text="@string/wrong_guess" />-->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:columnCount="5"
        android:rowCount="1">
        <TextView
            android:id="@+id/LetterOne"

            android:layout_width="50dp"
            android:layout_height = "wrap_content"
            android:layout_column="0"

            android:textSize="35sp"

            android:text="__"


            />
        <TextView
            android:id="@+id/LetterTwo"


            android:layout_width="50dp"
            android:layout_height = "wrap_content"
            android:layout_column="1"
            android:textSize="35sp"

            android:text="__"
            />
        <TextView
            android:id="@+id/LetterThree"
            android:layout_width="50dp"
            android:layout_height = "wrap_content"
            android:layout_column="2"
            android:textSize="35sp"

            android:text="__"
            />
        <TextView
            android:id="@+id/LetterFour"
            android:layout_width="50dp"
            android:layout_height = "wrap_content"
            android:layout_column="3"
            android:textSize="35sp"

            android:text="__" />
        <TextView
            android:id="@+id/LetterFive"
            android:layout_width="50dp"
            android:layout_height = "wrap_content"
            android:layout_column="4"
            android:textSize="35sp"

            android:text="__" />




        </GridLayout>
    <TextView
        android:id="@+id/textDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text = "Choose a Letter">

    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/Reset"
            android:layout_width="181dp"
            android:layout_height="70dp"
            android:text="Reset Current Game"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.131" />

        <Button
            android:id="@+id/NewGame"
            android:layout_width="181dp"
            android:layout_height="70dp"
            android:text="New Game"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>


